<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="85dp">

    <TextView
        android:id="@+id/txt_sentido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/vw_divider"
        android:layout_centerVertical="true"
        android:background="@drawable/circulo_background"
        android:gravity="center"
        android:text="I/V"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_linha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/txt_sentido"
        android:text="0.006"
        android:textAlignment="center"
        android:textSize="30sp"/>


    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="0.08dp"
        android:layout_below="@+id/txt_linha"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimaryDark" />


</RelativeLayout>